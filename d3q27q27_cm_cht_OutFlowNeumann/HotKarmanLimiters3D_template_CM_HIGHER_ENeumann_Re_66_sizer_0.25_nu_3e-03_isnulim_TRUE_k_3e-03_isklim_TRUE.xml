
<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/">
    <Geometry nx="64" ny="36" nz="3" >   
      <CM_HIGHER> <Box/> </CM_HIGHER>  
      <WVelocity><Inlet/></WVelocity>
      <ENeumann> <Outlet/> </ENeumann>  
        <Wall mask="ALL">
          <Cylinder dx="28" dy="14" nx="8" ny="8" nz="3"/>
        </Wall>

        <HeaterDirichletTemperatureEQ name="dirichlet_hot" mask="COLLISION"> 
          <Cylinder dx="28" dy="14" nx="8" ny="8" nz="3"/>
        </HeaterDirichletTemperatureEQ>  
        
        <ForceMeasurment>
          <Cylinder dx="28" dy="14" nx="8" ny="8" nz="3"/>
        </ForceMeasurment>

        <FluxMeasurment> <Box dx="-10" nx="1"/> </FluxMeasurment>
    </Geometry>

    <Model>
        <Params
            InitTemperature="10"
            InitTemperature-dirichlet_hot="11"
            InitTemperature-dirichlet_cold="10"
            />
        <Params/>

        <Params
            nu="0.003"
            conductivity="0.003"

            h_stability_enhancement="1."
            cp="1"
            material_density="1"
            />
        <Params/>
        <Params VelocityX="0.05" />
    </Model>

<Solve Iterations="2000"> 
    <Failcheck Iterations="1000" nx="250.000000" ny="37.500000" nz="3" />
    <Log Iterations="100"/>
    <VTK Iterations="1000" what="T,U,Rho"/> 
</Solve>
</CLBConfig>
