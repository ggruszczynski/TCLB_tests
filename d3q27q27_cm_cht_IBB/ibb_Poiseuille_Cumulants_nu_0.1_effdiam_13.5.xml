

<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/">
    <Geometry nx="32" ny="15.000000"  nz="3">
        <Cumulants>
            <Box/>
        </Cumulants>    
		<FluxMeasurment> <Box nx="1"/> </FluxMeasurment>
		<IBB name="border" >
			<STL file="example/data/Plate_128x2x128.stl" scale="1m" Xrot="0d" x="-2" y="-1.250000" z="-2" side="surface"/>
      		<STL file="example/data/Plate_128x2x128.stl" scale="1m" Xrot="0d" x="-2" y="14.250000" z="-2" side="surface"/>
		</IBB>
<!-- 
	     <Wall mask="ALL" name="border" >
	        <Box ny="1"/>
	        <Box dy="-1"/>
	    </Wall> -->

    </Geometry>

    <Model>
        <Params
            InitTemperature="10"
            InitTemperature-dirichlet_hot="11"
            InitTemperature-dirichlet_cold="10"
            />
        <Params/>

        <Params
            nu="0.100000"
            nu_buffer="0.100000"
            conductivity="0.1666666"
            conductivity_buffer="0.1666666"

            h_stability_enhancement="1."
            cp="1"
            material_density="1"
            />
        <Params/>
	    <Params GravitationX="4.389575e-05" />
	    <Params BoussinesqCoeff="1"/>
        <!-- gx = 2 * uc * (mu_l + mu_h) / ((rho_l + rho_h) * h * h) -->
        <!-- we set uc=0.01 - max velocity -->
    </Model>
<Failcheck Iterations="1000" nx="32" ny="15.000000" nz="3" />
<Log Iterations="1000"/>
<Stop XHydroFLuxChange="1e-6" Times="6" Iterations="1000"/>
<Solve Iterations="10000"> <VTK Iterations="1000" what="T,U,Rho"/> </Solve>
</CLBConfig>

